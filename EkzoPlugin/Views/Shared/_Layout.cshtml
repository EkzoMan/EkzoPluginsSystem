@using EkzoPlugin.Infrastructure
@using EkzoPlugin.PluginManager
@{
    IEnumerable<IModule> modules = PluginManager.Current.GetModules();
    Func<string, IModule> getModule = name => PluginManager.Current.GetModule(name);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge;">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - EkzoPluginsSystem</title>
    <link href="@Url.Content("~/Content/images/ekzoico.ico")" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render(
                   "~/Content/ModernLayoutStyle.css",
                   "~/Content/metroui/css/metro-bootstrap.css",
                   "~/Content/metroui/css/metro-bootstrap-responsive.css",
                   "~/Content/metroui/css/iconFont.min.css")
    @RenderSection("styles", false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/metro.min.js")
    @Scripts.Render("~/bundles/metro")
    @RenderSection("scripts", false)
</head>
<body style="background-color: #efeae3" class="metro">
    <header data-load="header.html" class="bg-dark">
        <div class="navigation-bar dark fixed-top shadow">
            <div class="navigation-bar-content container">
                <a class="element" href="/"><span class="icon-grid-view"></span>EkzoPluginSystem</a>
                <span class="element-divider"></span>
                <a href="#" class="element1 pull-menu"></a>
                <ul class="element-menu">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "element" })</li>
                    <span class="element-divider"></span>
                    <li>@Html.ActionLink("Change log", "Changelog", "Home", null, new { @class = "element" })</li>
                    <span class="element-divider"></span>
                    <li>@Html.ActionLink("Roadmap", "Roadmap", "Home", null, new { @class = "element" })</li>
                    <span class="element-divider"></span>
                    @foreach (IModule module in modules)
                    {
                        <li>@Html.ActionLink(module.Title, "Index", module.EntryControllerName, null, new { @class = "element" })</li>
                        <span class="element-divider"></span>
                    }
                </ul>

                <div class="no-tablet-portrait no-phone">
                    <a class="element place-right" href="https://github.com/EkzoMan/EkzoPluginsSystem/archive/MetroLayout.zip" title="GetIT"><span class="icon-box-add"></span></a>
                    <span class="element-divider place-right"></span>
                    <a class="element place-right" href="https://github.com/EkzoMan/EkzoPluginsSystem" title="GitHub"><span class="icon-github"></span></a>
                    <span class="element-divider place-right"></span>
                    <a class="element place-right" href="http://jigsaw.w3.org/css-validator/validator?uri=metroui.org.ua&amp;profile=css3&amp;usermedium=all&amp;warning=no&amp;vextwarning=" title="CSS3 validator"><span class="icon-css3"></span></a>
                </div>
            </div>
        </div>
    </header>

    <div class="">
        <div style="height: 230px;">
            <div style="padding: 50px 20px" class="container">
                <h1 class="">EkzoPluginSystem</h1>
                <h2 class="">
                    ASP.NET MVC 4 plugin architecture system<br>
                    with MetroUI(ModernUI) interface.
                </h2>
            </div>
        </div>
        <div class="container">
            <div class="grid">
                <div class="row">
                    <div class="span14 no-tablet-portrait no-phone">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-steel">
            <div style="padding: 10px 0;" class="container">

                <div class="grid no-margin">
                    <div class="row no-margin">
                        <div class="span3 padding10">
                        </div>
                        <div class="span6 padding10 fg-white">
                            <h3 class="fg-white">About EkzoPluginSystem author</h3>
                            <p class="fg-white">
                                Name: Alexey Misyagin.<br />
                                Occupation: Web developer<br />
                                Location: Moscow, Russia.
                            </p>
                        </div>
                        <div class="span3 padding10">
                            <a href="https://github.com/EkzoMan" style="width: 100%; margin-bottom: 5px" class="button info ">Github</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-dark">
            <div style="padding: 10px 0;" class="container">

                <div class="grid no-margin">
                    <div class="row no-margin">
                        <div class="span3 padding10">
                        </div>
                        <div class="span6 padding10">
                            <h3 class="fg-white">About MetroUI CSS author</h3>
                            <p class="fg-white">Hi! My name Sergey Pimenov and i'm author of Metro UI CSS from Kiev, Ukraine.</p>
                        </div>
                        <div class="span3 padding10">
                            <a href="https://github.com/olton/Metro-UI-CSS" style="width: 100%; margin-bottom: 5px" class="button info ">Github</a>
                        </div>
                    </div>
                </div>
            </div>

            <div style="padding: 10px" class="container tertiary-text bg-dark fg-white">
                2013-2014, EkzoPluginSystem &copy; by <a class="fg-yellow" href="mailto:amisyagin@yandex.ru">Alexey Misyagin</a><br />
                2012-2013, Metro UI CSS &copy; by  <a class="fg-yellow" href="mailto:sergey@pimenov.com.ua">Sergey Pimenov</a> <br />
                Core version: @System.Configuration.ConfigurationSettings.AppSettings["coreVersion"]
            </div>
        </div>
    </div>
</body>
</html>